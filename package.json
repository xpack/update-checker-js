{
  "name": "@xpack/update-checker",
  "version": "1.1.0",
  "description": "Check if a newer version of a npm package is available",
  "main": "./index.js",
  "directories": {
    "bin": "./bin",
    "lib": "./lib",
    "test": "./test"
  },
  "bin": {},
  "scripts": {
    "prepublishOnly": "standard && npm run test-tap -s",
    "test": "standard && npm run test-tap -s",
    "test-coverage": "tap --coverage --reporter=classic --timeout 600 --no-color \"test/tap/*.js\"",
    "test-tap": "tap --reporter=classic --timeout 300 --no-color \"test/tap/*.js\"",
    "tap": "tap --reporter=spec --timeout 300 --no-color",
    "tap-coverage": "tap --coverage --reporter=spec --timeout 300 --no-color",
    "fix": "standard --fix",
    "link": "npm link @@ilg/es6-promisifier"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xpack/update-checker-js.git"
  },
  "keywords": [
    "cli",
    "version",
    "update"
  ],
  "author": {
    "name": "Liviu Ionescu",
    "email": "ilg@livius.net",
    "url": "http://liviusdotnet.wordpress.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xpack/update-checker-js/issues"
  },
  "homepage": "https://github.com/xpack/update-checker-js",
  "dependencies": {
    "@xpack/es6-promisifier": "~1.0.0",
    "@xpack/logger": "~2.2.0",
    "latest-version": "^5.1.0",
    "semver": "^6.3.0",
    "is-installed-globally": "^0.3.1",
    "is-path-inside": "^3.0.2",
    "is-ci": "^2.0.0",
    "async-mkdirp": "^1.2.7",
    "user-home": "^2.0.0",
    "del": "^5.1.0"
  },
  "devDependencies": {
    "standard": "^14.3.1",
    "tap": "^14.9.2",
    "tar": "^5.0.5"
  },
  "peerDependencies": {},
  "bundledDependencies": [],
  "optionalDependencies": {},
  "engines": {
    "node": ">7.7.0"
  }
}
